/* pages/search/detail/index.wxss */
.search-title {
  font-size: 24rpx;
  align-items: center;
  padding: 10rpx 20rpx;
}
.movie-item {
  padding: 20rpx;
  font-size: 24rpx;
}
.movie-img-wrap {
  width: 180rpx;
  height: 250rpx;
}
.movie-img {
  width: 100%;
  height: 250rpx;
}
.movie-content {
  display: flex;
  max-width: 460rpx;
  padding-left: 20rpx;
  flex-direction: column;
}
.movie-title {
  font-size: 36rpx;
}
.movie-label,
.movie-label-short {
  color: #3c3c3c;
}
.movie-label-short {
  width: 78rpx;
}
.movie-scole {
  color: #FEA54C;
  margin-left: 10rpx;
}
.movie-content-warp {
  padding-top: 10rpx;
}
.movie-content-casts {
  display: flex;
  flex-wrap: wrap;
  max-width: 380rpx;
} 
.break {
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}