/* pages/tools/cars/detail/index.wxss */
.car-key {
  width: 100%;
  height: 50rpx;
  padding: 0 20rpx;
  align-items: center;
  background-color: #F5F5F5;
}
.car-key-text {
  font-size: 26rpx;
}
.car-list {
  padding: 0 20rpx;
}
.car-item {
  width: 100%;
  height: 120rpx;
  font-size: 30rpx;
  align-items: center;
  border-bottom: 1rpx solid #F5F5F5;
}
.car-logo {
  width: 150rpx;
  height: 100rpx;
  margin-right: 30rpx;
}
.header {
  position: relative;
}
.price {
  color: #FFF;
  left: 20rpx;
  bottom: 30rpx;
  font-size: 24rpx;  
  position: absolute;
  border-radius: 8rpx;
  padding: 6rpx 16rpx;
  background-color: #515151;
}
.img-count {
  color: #FFF;
  right: 20rpx;
  bottom: 20rpx;  
  position: absolute;
}
.banner {
  width: 750rpx;
  height: 500rpx;
}
.car-name {
  font-size: 24rpx;
}
.car-sizetype {
  color: #999;
  font-size: 20rpx;
  padding-top: 10rpx;
}
.car-content {
  width: 520rpx;
  
  align-items: center;
  justify-content: space-between;
}
.car-text {
  height: 100rpx;
}
.low-price {
  color: #F00;
  font-size: 24rpx;
}