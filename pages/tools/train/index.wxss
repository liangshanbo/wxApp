/* pages/tools/train/index.wxss */
.train-search {
  padding: 20rpx;
  padding-top: 40rpx;
  justify-content: space-between;
}
.train-to,
.train-from {
  width: 260rpx;
  border-bottom: 1rpx solid #7E7E7E;
}
.train-to {
  justify-content: flex-end;
}
.train-transfer {
  width: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.train-image {
  width: 60rpx;
  height: 60rpx;
}
.date {
  padding: 20rpx;
  margin: 0 20rpx;
  padding-top: 40rpx;
  border-bottom: 1rpx solid #7E7E7E;
}
.btn-warp {
  padding: 20rpx;
  padding-top: 40rpx;
}
.btn {
  color: #FFF;
  width: 100%;
  height: 80rpx;
  display: flex;
  border-radius: 8rpx;
  align-items: center;
  justify-content: center;
  background-color: #1B82D2;
}