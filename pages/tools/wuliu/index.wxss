/* pages/tools/mobile/index.wxss */
.mobile-form {
  width: 100%;
  height: 80rpx;
  display: flex;
  padding: 20rpx;
  align-items: center;
  justify-content: center;
}
.mobile-input {
  width: 500rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  border-radius: 8rpx;
  padding-left: 10rpx;
  border: 1rpx solid #187AC5;
}
.mobile-placeholder {
  font-size: 30rpx;
  padding-left: 10rpx;
}
.mobile-body {
  padding: 20rpx;
  font-size: 30rpx;
}
.mobile-line {
  height: 50rpx;
  display: flex;
  align-items: center;
}
.label {
  width: 150rpx;
  color: #929292;
  text-align: right;
}
.content {
  font-size: 32rpx;
  padding-left: 10rpx;
}
.wuliu-line {
  font-size: 20rpx;
  padding: 10rpx 20rpx;
}
.wuliu-time-wrap {
  width: 100rpx;
  padding-right: 20rpx;
  align-items: flex-end;
  border-right: 1rpx solid #187AC5;
}
.wuliu-time {
  width: 100%;
  color: #929292;
  text-align: right;
  padding-bottom: 10rpx;
}
.gray {
  width: 100%;
  color: #929292;
  padding-left: 20rpx;
}
.wuliu-status {
  width: 100%;
  color: #0CB720;
  padding-left: 20rpx;
}
