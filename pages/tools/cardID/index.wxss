/* pages/tools/cardID/index.wxss */
.mobile-form {
  width: 100%;
  height: 80rpx;
  display: flex;
  padding: 20rpx;
  align-items: center;
  justify-content: center;
}
.mobile-input {
  width: 500rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  border-radius: 8rpx;
  padding-left: 10rpx;
  border: 1rpx solid #187AC5;
}
.mobile-placeholder {
  font-size: 30rpx;
  padding-left: 10rpx;
}
.mobile-body {
  padding: 20rpx;
  font-size: 30rpx;
}
.mobile-line {
  height: 50rpx;
  display: flex;
  align-items: center;
}
.label {
  width: 120rpx;
  color: #929292;
  text-align: right;
}
.content {
  font-size: 32rpx;
  padding-left: 10rpx;
}